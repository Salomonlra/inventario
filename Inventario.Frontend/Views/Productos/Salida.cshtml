@model Inventario.Frontend.Models.Producto
@{
    ViewData["Title"] = "Salida";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Agregar entrada</h5>
        </div>
        <div class="card-body">
            <form asp-action="Salida" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Stock">Stock</label>
                    <input asp-for="Stock" class="form-control" placeholder="Stock" readonly />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Unidad">Unidad</label>
                    <input asp-for="Unidad" class="form-control" placeholder="Unidad" readonly />
                    <span asp-validation-for="Unidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Descripcion">Descripcion</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" readonly />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Dependencia">Dependenciad</label>
                    <input asp-for="Dependencia" class="form-control" placeholder="Dependenciad" readonly />
                    <span asp-validation-for="Dependencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Cantidad">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" placeholder="Cantidad" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fa fa-save"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal">
                            <i class="fa fa-ban"></i> Cancelar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>